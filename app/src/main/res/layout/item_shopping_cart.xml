<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_goods_mark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:paddingLeft="16dp"
        android:src="@drawable/common_selector_bg" />

    <!--<CheckBox-->
    <!--android:id="@+id/iv_goods_mark"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_gravity="center_vertical"-->
    <!--android:paddingLeft="16dp"-->
    <!--android:paddingRight="14dp"-->
    <!--android:button="@null"-->
    <!--android:drawableLeft="@drawable/radio_button_bg"-->
    <!--android:drawablePadding="10dp"-->
    <!--/>-->

    <ImageView
        android:id="@+id/iv_goods_image"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/iv_goods_mark"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_good_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/iv_goods_image"
        android:text="1000积分/元"
        android:textColor="@color/c666"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/good_count_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/goods_count_color" />

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/goods_count_color" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/goods_count_color" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="x1"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ll_count"
        android:layout_toRightOf="@id/iv_goods_image"
        android:singleLine="true"
        android:text="车载导航系统"
        android:textColor="@color/black_text_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/diver_color" />


</RelativeLayout>