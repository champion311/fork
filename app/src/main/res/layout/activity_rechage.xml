<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/item_dark_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="请选择充值金额"
        android:textColor="@color/black_text_color"
        android:textSize="15sp" />

    <com.shosen.max.widget.MultiRadioGroup
        android:id="@+id/muti_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="63dp">

            <RadioButton
                android:id="@+id/ra_1"
                style="@style/RechargeRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥1000" />

            <RadioButton
                android:id="@+id/ra_2"
                style="@style/RechargeRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:text="¥2000" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="63dp">

            <RadioButton
                android:id="@+id/ra_3"
                style="@style/RechargeRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥5000" />

            <RadioButton
                android:id="@+id/ra_4"
                style="@style/RechargeRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:text="¥10000" />

        </LinearLayout>

    </com.shosen.max.widget.MultiRadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:text="请输入充值金额"
        android:textColor="@color/black_text_color"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="¥"
            android:textColor="@color/black_text_color"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ed_charge_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textColor="@color/black_text_color"
            android:textCursorDrawable="@null" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_exchange_now"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/commodity_bg2"
        android:gravity="center"
        android:text="立即充值"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible" />


</LinearLayout>