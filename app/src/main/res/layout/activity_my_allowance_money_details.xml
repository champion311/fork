<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/item_common_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver_color" />

    <ImageView
        android:id="@+id/no_allowance_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:contentDescription="TODO" android:scaleType="centerCrop"
        android:src="@drawable/no_friends_alert"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="暂无关注"
        android:textColor="@color/hint_color"
        android:textSize="18sp"
        android:visibility="gone" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_my_allowance_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>